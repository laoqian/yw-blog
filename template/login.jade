          p &nbsp


    style.
      .login-box-out {
        margin-top: 50%;
        margin-bottom: 50%;
        margin-left: 50%;
        margin-right: 50%;
      }

      .login-box-in {
        margin-top: -300px;
        margin-bottom: -300px;
        margin-left: -250px;
        margin-right: -250px;
        background-color: lightslategrey;
        font-size: 25px;
        text-align: center;
        border-radius: 10px;
      }

      input.login {
        border-radius: 3px;
        type: text;
      }

      p.login {
        color: white;
        font-size: 35px;
      }

      p.blank {
        height: 1px;
        font-size: 5px;
      }

      label.blank {
        height: 1px;
      }

      button.login {
        background-color: lightcoral;
        font-size: 20px;
        border-radius: 3px;
      }
