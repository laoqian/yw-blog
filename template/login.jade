
html
  head
    link(rel='stylesheet', href='/styles/site.min.css')

  body
    div.login-box-out
      div.login-box-in(color="red")
        form(method='post')
          p &nbsp
          p
            p.login 登录
            p &nbsp
          p
            span User: &nbsp
            input.login(autofocus ,type="text", name='user',value='admin')
          p
            span Pass: &nbsp
            input.login(autofocus, type='password' name='pass',value='123456')
